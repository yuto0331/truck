<%= form_with(model: bath, local: true) do |form| %>
  <% if bath.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bath.errors.count, "error") %> prohibited this bath from being saved:</h2>

      <ul>
      <% bath.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!--<div class="field">-->
  <!--  <%#= form.label :user_id %>-->
  <!--  <%#= form.number_field :user_id, id: :bath_user_id %>-->
  <!--</div>-->

  <div class="field">
    <%= form.label :写真 %>
    <%= form.file_field :image, id: :bath_image %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="field">
    <%= form.label :店名（お風呂屋）） %>
    <%= form.text_field :name, id: :bath_name %>
  </div>

  <div class="field">
    <%= form.label :地域 %>
    <%= form.select :place, [["東北", "東北"], ["関東 ", "関東"], ["中部", "中部"], ["近畿", "近畿"], ["中国", "中国"], ["四国", "四国"], ["九州", "九州"],] ,class:"area" %>
    
  </div>

  <div class="field">
    <%= form.label :お風呂情報 %>
    <%= form.text_area :content, id: :bath_content %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
